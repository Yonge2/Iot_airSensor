<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#10ff10"
                android:text="이전 데이터 보기"
                android:id="@+id/btn_predata"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#10ff10"
                android:text="원래 데이터 보기"
                android:visibility="gone"
                android:id="@+id/btn_orgdata"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/amOrpm"
                android:gravity="right"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>



        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/barChart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_temperature"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/icon_temp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="온도"/>
            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_Humidity"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/icon_hum"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="습도"/>
            <TextView
                android:id="@+id/tv_Humidity"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_CO2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/icon_co2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="이산화탄소"/>
            <TextView
                android:id="@+id/tv_CO2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3"
                android:gravity="center" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>